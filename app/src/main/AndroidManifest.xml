<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissão de internet para o Google Sign-In -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TechDeskMobile">

        <!-- Atividade do Google Sign-In -->
        <activity
            android:name="com.google.android.gms.auth.api.signin.GoogleSignInActivity"
            android:exported="false" />

        <activity
            android:name=".PerfilConfig"
            android:exported="false" />
        <activity
            android:name=".DetalhesChamadoActivity"
            android:exported="false" />
        <activity
            android:name=".MeusChamados"
            android:exported="false" />
        <activity
            android:name=".TelaIA"
            android:exported="false" />
        <activity
            android:name=".TelaPrincipal"
            android:exported="false" />
        <activity
            android:name=".View.TelaAbrirChamados"
            android:exported="false" />
        <activity
            android:name=".TermosPrivacidade"
            android:exported="true" />
        <activity
            android:name=".TelaCriarContaTD"
            android:exported="false" />
        <activity
            android:name=".View.TelaEntrarTD"
            android:exported="false" /> <!-- MainActivity: Splash + botão + Handler -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Segunda tela -->
        <activity
            android:name=".TelaLoginCad"
            android:exported="true" />
    </application>

</manifest>
